#################################################
#             Configuration de ZSH
#################################################

if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

#################################################
#           Variables d'environement
#################################################
export EDITOR="{{ .editor }}"
export ZSH="{{ .chezmoi.homeDir }}/.oh-my-zsh"
export MOZ_ENABLE_WAYLAND=1
export FZF_DEFAULT_OPTS=$FZF_DEFAULT_OPTS' --color=fg:#eceff4,bg:#2e3440,hl:#81a1c1 --color=fg+:#eceff4,bg+:#3b4252,hl+:#81a1c1 --color=info:#a3be8c,prompt:#b48ead,pointer:#5e81ac --color=marker:#d08770,spinner:#ebcb8b,header:#8fbcbb'

#################################################
#                    Alias
#################################################

alias http.server="python -m http.server 8080"

alias bemenu="bemenu-run --fn '{{ .terminal.font }} {{ .sway.font_size }}' \
    -p '  -' --tf '#d8dee9' --hf '#81a1c1' --sf '#81a1c1' --scf '#81a1c1' \
    --tb  '#2e3440' --fb '#2e3440' --hb '#2e3440' --nb '#2e3440'"

alias passmenu="passmenu --fn '{{ .terminal.font }} {{ .sway.font_size }}' \
    -p '  -' --tf '#d8dee9' --hf '#81a1c1' --sf '#81a1c1' --scf '#81a1c1' \
    --tb  '#2e3440' --fb '#2e3440' --hb '#2e3440' --nb '#2e3440'"

alias ssh="kitty +kitten ssh"

alias pycharm="_JAVA_AWT_WM_NONREPARENTING=1 pycharm"
##################################################
#                    OMZ
##################################################
ZSH_THEME="powerlevel10k/powerlevel10k"

DISABLE_AUTO_UPDATE="true"

plugins=(git zsh-syntax-highlighting zsh-autosuggestions
         virtualenvwrapper)

# VI mode
bindkey -v

# FZF  
source /usr/share/fzf/key-bindings.zsh
source /usr/share/fzf/completion.zsh

#################################################
#          Couleurs pour les manuels
#################################################
export LESS_TERMCAP_mb=$'\E[1;34m'
export LESS_TERMCAP_md=$'\E[1;34m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;35m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_us=$'\E[1;32m'
export LESS_TERMCAP_ue=$'\E[0m'

#################################################
#              Syntax Highlighting
#################################################
typeset -A ZSH_HIGHLIGHT_STYLES
ZSH_HIGHLIGHT_STYLES[alias]='fg=green,bold'
ZSH_HIGHLIGHT_STYLES[suffix-alias]='fg=green,bold'
ZSH_HIGHLIGHT_STYLES[builtin]='fg=green,bold'
ZSH_HIGHLIGHT_STYLES[function]='fg=green,bold'
ZSH_HIGHLIGHT_STYLES[command]='fg=green,bold'
ZSH_HIGHLIGHT_STYLES[precommand]='fg=green,bold'
ZSH_HIGHLIGHT_STYLES[commandseparator]='fg=white,bold'
ZSH_HIGHLIGHT_STYLES[redirection]='fg=white,bold'
ZSH_HIGHLIGHT_STYLES[single-hyphen-option]='fg=white,bold'
ZSH_HIGHLIGHT_STYLES[double-hyphen-option]='fg=white,bold'

source $ZSH/oh-my-zsh.sh

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
